DATABASE_URL=postgresql+psycopg://payme:payme@db:5432/payme
JWT_SECRET=change-me
JWT_EXPIRE_MINUTES=120
MOCK_GMAIL=true
MOCK_PLAID=true
PROVISION_LARGE_TEST_USER=true
MOCK_PROVISION_USERNAME=large_test_user
MOCK_PROVISION_EMAIL=large_test_user@example.com
MOCK_PROVISION_PASSWORD=PayMe2026!
MOCK_PROVISION_EMAILS=1000
MOCK_PROVISION_TRANSACTIONS=1000
ADMIN_DEBUG=true
LOG_FILE_PATH=/var/log/app.jsonl

# Track 2: Gmail real OAuth (set MOCK_GMAIL=false to enable)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Match API_PORT in docker compose (default 8000, override with API_PORT=18000 etc.)
GOOGLE_REDIRECT_URI=http://localhost:8000/integrations/gmail/oauth/callback

# Track 3: Plaid real integration (set MOCK_PLAID=false to enable)
PLAID_CLIENT_ID=
PLAID_SECRET=
PLAID_ENV=sandbox

# Track 4: Autofill agent
AUTOFILL_ARTIFACTS_DIR=/tmp/autofill-artifacts
AUTOFILL_MAX_RETRIES=3
AUTOFILL_RETRY_DELAY_SECONDS=60

# Track 5: Gateway / payouts
GATEWAY_API_KEY_SALT=change-me-gateway-salt
# Fernet key for encrypting OAuth tokens and bank account references at rest
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
TOKEN_ENCRYPTION_KEY=

# Force match variant globally (optional): rules_only | rules_vector | rules_vector_ranker
MATCHING_VARIANT=rules_vector_ranker

# Default ranker weights used only when artifacts/weights.json is missing.
# These are now env-configurable so you can tune bootstrap behavior without code changes.
RANKER_DEFAULT_RULES_CONFIDENCE_WEIGHT=0.65
RANKER_DEFAULT_SIMILARITY_WEIGHT=0.20
RANKER_DEFAULT_PAYOUT_WEIGHT=0.10
RANKER_DEFAULT_URGENCY_WEIGHT=0.03
RANKER_DEFAULT_EASE_WEIGHT=0.02
